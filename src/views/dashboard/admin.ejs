<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - OnlyFreds</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    .admin-card {
        transition: all 0.2s;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
        background-color: #fff;
        border: 1px solid #e9ecef;
    }
    .admin-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,0.1) !important;
        border-color: #0d6efd;
        color: #0d6efd;
    }
    .icon-box {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        display: block;
    }
    .stat-card {
        border-left: 4px solid #0d6efd;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
  <%- include("../partials/navbar") %>

  <div class="container py-5">
    
    <div class="d-flex align-items-center mb-5">
        <div class="bg-dark text-white rounded-circle d-flex align-items-center justify-content-center shadow" style="width: 80px; height: 80px; font-size: 2.5rem;">
            <i class="bi bi-shield-lock-fill"></i>
        </div>
        <div class="ms-4">
            <h2 class="fw-bold mb-0">Admin Dashboard</h2>
            <p class="text-muted mb-0">Overview & Analytics</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-5">
        <div class="card-body p-4">
            <form action="/dashboard/admin" method="GET" class="row g-3 align-items-end">
                <div class="col-md-8">
                    <label class="form-label fw-bold small text-uppercase text-muted">Date Range Filter</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0"><i class="bi bi-calendar-range"></i></span>
                        <input type="text" id="dateRangePicker" name="dateRange" class="form-control bg-light border-0" value="<%= dateRange %>" placeholder="Select Date Range">
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold">Apply Filter</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 stat-card" style="border-left-color: #ffc107;">
                <div class="card-body p-4 d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Today's Sales</h6>
                        <h2 class="fw-bold mb-0">‚Ç±<%= dailySales.toFixed(2) %></h2>
                    </div>
                    <div class="text-warning fs-1"><i class="bi bi-graph-up-arrow"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 stat-card">
                <div class="card-body p-4 d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Revenue (Range)</h6>
                        <h2 class="fw-bold mb-0">‚Ç±<%= totalRevenue.toFixed(2) %></h2>
                    </div>
                    <div class="text-primary fs-1"><i class="bi bi-currency-dollar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 stat-card" style="border-left-color: #198754;">
                <div class="card-body p-4 d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted text-uppercase fw-bold mb-1">Orders (Range)</h6>
                        <h2 class="fw-bold mb-0"><%= totalOrders %></h2>
                    </div>
                    <div class="text-success fs-1"><i class="bi bi-bag-check-fill"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100 rounded-4">
                <div class="card-header bg-white border-0 pt-4 ps-4">
                    <h5 class="fw-bold mb-0">Sales Trend</h5>
                </div>
                <div class="card-body p-4">
                    <canvas id="salesChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100 rounded-4">
                <div class="card-header bg-white border-0 pt-4 ps-4">
                    <h5 class="fw-bold mb-0">Order Status</h5>
                </div>
                <div class="card-body p-4 d-flex align-items-center justify-content-center">
                    <div style="width: 100%; max-width: 300px;">
                        <canvas id="statusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        
        <div class="col-lg-5">
            <div class="card shadow-sm border-0 h-100 rounded-4">
                <div class="card-header bg-white border-0 pt-4 ps-4">
                    <h5 class="fw-bold mb-0">üèÜ Best Selling Products</h5>
                </div>
                <div class="card-body p-4">
                    <% if (bestSellers && bestSellers.length > 0) { %>
                        <canvas id="bestSellersChart"></canvas>
                    <% } else { %>
                        <p class="text-muted text-center py-5">No sales data for this period.</p>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card shadow-sm border-0 h-100 rounded-4 overflow-hidden">
                <div class="card-header bg-white border-0 pt-4 ps-4 pb-3">
                    <h5 class="fw-bold mb-0">üìã Products Sold (Selected Range)</h5>
                </div>
                <div class="table-responsive" style="max-height: 300px;">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light sticky-top">
                            <tr>
                                <th class="ps-4">Product Name</th>
                                <th>Units Sold</th>
                                <th class="text-end pe-4">Revenue</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (productsSold && productsSold.length > 0) { %>
                                <% productsSold.forEach(p => { %>
                                    <tr>
                                        <td class="ps-4 fw-bold text-secondary"><%= p.name %></td>
                                        <td><%= p.quantity %></td>
                                        <td class="text-end pe-4 text-success fw-bold">‚Ç±<%= p.revenue.toFixed(2) %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="3" class="text-center py-4 text-muted">No products sold in this range.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <h5 class="fw-bold mb-3 text-secondary">Quick Actions</h5>
    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <a href="/dashboard/admin/users" class="card admin-card h-100 rounded-4 border-0 shadow-sm p-4 text-center">
                <div class="card-body">
                    <span class="icon-box text-primary"><i class="bi bi-people-fill"></i></span>
                    <h5 class="fw-bold">Manage Users</h5>
                    <p class="text-muted small mb-0">Customers & Bans</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="/dashboard/admin/products" class="card admin-card h-100 rounded-4 border-0 shadow-sm p-4 text-center">
                <div class="card-body">
                    <span class="icon-box text-success"><i class="bi bi-box-seam-fill"></i></span>
                    <h5 class="fw-bold">Manage Products</h5>
                    <p class="text-muted small mb-0">Inventory & Stock</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="/dashboard/admin/categories" class="card admin-card h-100 rounded-4 border-0 shadow-sm p-4 text-center">
                <div class="card-body">
                    <span class="icon-box text-warning"><i class="bi bi-tags-fill"></i></span>
                    <h5 class="fw-bold">Manage Categories</h5>
                    <p class="text-muted small mb-0">Collections</p>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-3">
            <a href="/dashboard/admin/orders" class="card admin-card h-100 rounded-4 border-0 shadow-sm p-4 text-center">
                <div class="card-body">
                    <span class="icon-box text-info"><i class="bi bi-receipt"></i></span>
                    <h5 class="fw-bold">Manage Orders</h5>
                    <p class="text-muted small mb-0">Fulfillment</p>
                </div>
            </a>
        </div>
    </div>

  </div>

  <%- include("../partials/footer") %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/script/navbar.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

  <script>
    // Init Date Picker
    flatpickr("#dateRangePicker", {
        mode: "range",
        dateFormat: "Y-m-d",
        defaultDate: ["<%= dateRange.split(' to ')[0] %>", "<%= dateRange.split(' to ')[1] %>"]
    });

    // Data from Controller
    const salesLabels = <%- JSON.stringify(salesLabels) %>;
    const salesValues = <%- JSON.stringify(salesValues) %>;
    const statusValues = <%- JSON.stringify(statusValues) %>;
    const bestSellers = <%- JSON.stringify(bestSellers) %>;

    // 1. Sales Line Chart
    const ctxSales = document.getElementById('salesChart').getContext('2d');
    new Chart(ctxSales, {
        type: 'line',
        data: {
            labels: salesLabels,
            datasets: [{
                label: 'Revenue (‚Ç±)',
                data: salesValues,
                borderColor: '#0d6efd',
                backgroundColor: 'rgba(13, 110, 253, 0.1)',
                tension: 0.4,
                fill: true,
                pointBackgroundColor: '#fff',
                pointBorderColor: '#0d6efd',
                pointRadius: 5
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false }
            },
            scales: {
                y: { beginAtZero: true, grid: { borderDash: [2, 4] } },
                x: { grid: { display: false } }
            }
        }
    });

    // 2. Status Doughnut Chart
    const ctxStatus = document.getElementById('statusChart').getContext('2d');
    new Chart(ctxStatus, {
        type: 'doughnut',
        data: {
            labels: ['To Pay', 'To Ship', 'To Receive', 'Completed', 'Cancelled'],
            datasets: [{
                data: statusValues,
                backgroundColor: [
                    '#ffc107', // Warning (To Pay)
                    '#0dcaf0', // Info (To Ship)
                    '#0d6efd', // Primary (To Receive)
                    '#198754', // Success (Completed)
                    '#dc3545'  // Danger (Cancelled)
                ],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            cutout: '70%',
            plugins: {
                legend: { position: 'bottom', labels: { usePointStyle: true, boxWidth: 8 } }
            }
        }
    });

    // 3. Best Sellers Bar Chart
    if (document.getElementById('bestSellersChart')) {
        const ctxBest = document.getElementById('bestSellersChart').getContext('2d');
        new Chart(ctxBest, {
            type: 'bar',
            data: {
                labels: bestSellers.map(i => i.name),
                datasets: [{
                    label: 'Units Sold',
                    data: bestSellers.map(i => i.quantity),
                    backgroundColor: [
                        'rgba(255, 206, 86, 0.7)', // Gold
                        'rgba(13, 202, 240, 0.7)',
                        'rgba(13, 110, 253, 0.7)',
                        'rgba(25, 135, 84, 0.7)',
                        'rgba(220, 53, 69, 0.7)'
                    ],
                    borderRadius: 5
                }]
            },
            options: {
                indexAxis: 'y', // Horizontal Bar
                responsive: true,
                plugins: { legend: { display: false } },
                scales: { x: { beginAtZero: true } }
            }
        });
    }
  </script>
</body>
</html>
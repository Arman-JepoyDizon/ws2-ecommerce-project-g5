<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Users - OnlyFreds</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/png" href="/img/OnlyFreds_logo.png"/>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
  <%- include("../../partials/navbar") %>

  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="fw-bold text-dark mb-0">üë• User Management</h2>
        <p class="text-muted mb-0">View customer analytics and manage access.</p>
      </div>
      <a href="/dashboard/admin" class="btn btn-outline-secondary rounded-pill">Back to Dashboard</a>
    </div>

    <% if (success) { %>
        <div class="alert alert-success rounded-4 shadow-sm border-0 d-flex align-items-center mb-4">
            <span class="me-2">‚úÖ</span> <%= success %>
        </div>
    <% } %>
    <% if (error) { %>
        <div class="alert alert-danger rounded-4 shadow-sm border-0 d-flex align-items-center mb-4">
            <span class="me-2">‚ö†Ô∏è</span> <%= error %>
        </div>
    <% } %>

    <div class="card border-0 shadow rounded-4 overflow-hidden">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="bg-light border-bottom">
            <tr>
              <th class="ps-4 py-3">User Info</th>
              <th class="py-3">Total Orders</th>
              <th class="py-3">Total Spent</th>
              <th class="py-3">Status</th>
              <th class="pe-4 py-3 text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (users && users.length > 0) { %>
                <% users.forEach(u => { %>
                <tr>
                    <td class="ps-4">
                        <div class="fw-bold text-dark"><%= u.firstName %> <%= u.lastName %></div>
                        <div class="small text-muted"><%= u.email %></div>
                        <div class="small text-muted font-monospace"><%= u.userId %></div>
                    </td>
                    <td>
                        <span class="badge bg-light text-dark border rounded-pill"><%= u.totalOrders %> Orders</span>
                    </td>
                    <td class="fw-bold text-success">
                        ‚Ç±<%= u.totalSpent.toFixed(2) %>
                    </td>
                    <td>
                        <% if (u.accountStatus === 'banned') { %>
                            <span class="badge bg-danger rounded-pill">BANNED</span>
                        <% } else { %>
                            <span class="badge bg-success rounded-pill">ACTIVE</span>
                        <% } %>
                    </td>
                    <td class="pe-4 text-end">
                        <% if (u.accountStatus === 'banned') { %>
                            <form action="/dashboard/admin/users/unban" method="POST" class="d-inline" onsubmit="return confirm('Unban this user?');">
                                <input type="hidden" name="userId" value="<%= u.userId %>">
                                <button class="btn btn-sm btn-outline-success rounded-pill fw-bold">Unban</button>
                            </form>
                        <% } else { %>
                            <button class="btn btn-sm btn-outline-danger rounded-pill fw-bold ban-btn" 
                                data-id="<%= u.userId %>" 
                                data-name="<%= u.firstName %> <%= u.lastName %>">
                                Ban User
                            </button>
                        <% } %>
                    </td>
                </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="text-center py-5 text-muted">No users found.</td>
                </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="modal fade" id="banModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content rounded-4 border-0 shadow">
        <div class="modal-header border-0 pb-0">
            <h5 class="modal-title fw-bold text-danger">Ban User</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body p-4">
            <p class="text-muted">You are about to ban <strong id="banUserName"></strong>.</p>
            
            <form action="/dashboard/admin/users/ban" method="POST">
                <input type="hidden" name="userId" id="banUserId">
                
                <div class="mb-3">
                    <label class="form-label fw-bold small text-uppercase">Reason</label>
                    <textarea name="reason" class="form-control bg-light border-0 rounded-3" rows="2" placeholder="e.g. Suspicious activity" required></textarea>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold small text-uppercase">Duration</label>
                    <select name="duration" id="banDurationSelect" class="form-select bg-light border-0 rounded-3">
                        <option value="permanent">Permanent</option>
                        <option value="7">7 Days</option>
                        <option value="30">30 Days</option>
                        <option value="365">1 Year</option>
                        <option value="custom">Custom</option>
                    </select>
                    
                    <div id="customDurationInput" class="mt-2 d-none">
                        <div class="input-group">
                            <input type="number" name="customDuration" class="form-control bg-light border-0" placeholder="Enter days" min="1">
                            <span class="input-group-text bg-light border-0 text-muted">Days</span>
                        </div>
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-danger rounded-pill fw-bold">Confirm Ban</button>
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("../../partials/footer") %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/script/navbar.js"></script>

  <script>
      const banBtns = document.querySelectorAll('.ban-btn');
      const banModal = new bootstrap.Modal(document.getElementById('banModal'));
      const banUserId = document.getElementById('banUserId');
      const banUserName = document.getElementById('banUserName');
      
      // Custom Duration Logic
      const banDurationSelect = document.getElementById('banDurationSelect');
      const customDurationInput = document.getElementById('customDurationInput');

      banDurationSelect.addEventListener('change', function() {
          if (this.value === 'custom') {
              customDurationInput.classList.remove('d-none');
              customDurationInput.querySelector('input').setAttribute('required', 'true');
          } else {
              customDurationInput.classList.add('d-none');
              customDurationInput.querySelector('input').removeAttribute('required');
          }
      });

      banBtns.forEach(btn => {
          btn.addEventListener('click', function() {
              banUserId.value = this.dataset.id;
              banUserName.textContent = this.dataset.name;
              
              // Reset form state when opening
              banDurationSelect.value = 'permanent';
              customDurationInput.classList.add('d-none');
              
              banModal.show();
          });
      });
  </script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Products - OnlyFreds</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
  <%- include("../../partials/navbar") %>

  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="fw-bold text-dark mb-0">üõí Products</h2>
        <p class="text-muted mb-0">Manage your inventory</p>
      </div>
      <a href="/dashboard/admin/products/new" class="btn btn-primary rounded-pill px-4 shadow-sm">
        <span class="fw-bold">+ New Product</span>
      </a>
    </div>

    <% if (success) { %>
        <div class="alert alert-success rounded-4 shadow-sm border-0 d-flex align-items-center mb-4">
            <span class="me-2">‚úÖ</span> <%= success %>
        </div>
    <% } %>
    <% if (error) { %>
        <div class="alert alert-danger rounded-4 shadow-sm border-0 d-flex align-items-center mb-4">
            <span class="me-2">‚ö†Ô∏è</span> <%= error %>
        </div>
    <% } %>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-3">
            <form action="/dashboard/admin/products" method="GET" class="row g-3 align-items-center">
                <div class="col-md-5">
                    <input type="text" name="search" class="form-control rounded-pill bg-light border-0" placeholder="Search product name..." value="<%= typeof search !== 'undefined' ? search : '' %>">
                </div>
                <div class="col-md-4">
                    <select name="category" class="form-select rounded-pill bg-light border-0">
                        <option value="">All Categories</option>
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat.categoryId %>" <%= (typeof selectedCategory !== 'undefined' && selectedCategory === cat.categoryId) ? 'selected' : '' %>>
                                <%= cat.name %>
                            </option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-md-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold flex-grow-1">Search</button>
                    <% if ((typeof search !== 'undefined' && search) || (typeof selectedCategory !== 'undefined' && selectedCategory)) { %>
                        <a href="/dashboard/admin/products" class="btn btn-light rounded-circle border" title="Clear Filters">‚úï</a>
                    <% } %>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow rounded-4 overflow-hidden">
      <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
            <thead class="bg-light border-bottom">
                <tr>
                <th class="ps-4 py-3 text-uppercase text-secondary small fw-bold">Product</th>
                <th class="py-3 text-uppercase text-secondary small fw-bold">Price</th>
                <th class="py-3 text-uppercase text-secondary small fw-bold">Category</th>
                <th class="pe-4 py-3 text-end text-uppercase text-secondary small fw-bold">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (products.length > 0) { %>
                    <% products.forEach(prod => { %>
                    <tr>
                        <td class="ps-4 py-3">
                            <div class="d-flex align-items-center">
                                <img src="<%= prod.imgUrl || '/img/OnlyFreds_logo.png' %>" alt="" style="width: 45px; height: 45px; object-fit: contain;" class="rounded me-3 border bg-white">
                                <div>
                                    <div class="fw-bold text-dark"><%= prod.name %></div>
                                    <div class="small text-muted text-truncate" style="max-width: 200px;"><%= prod.description %></div>
                                </div>
                            </div>
                        </td>
                        <td class="py-3 fw-bold text-primary">
                            <% if (prod.hasVariants) { %>
                                <small class="text-muted fw-normal">From</small> ‚Ç±<%= prod.price.toFixed(2) %>
                            <% } else { %>
                                ‚Ç±<%= prod.price.toFixed(2) %>
                            <% } %>
                        </td>
                        <td class="py-3">
                            <span class="badge bg-light text-dark border rounded-pill">
                                <%= categoryMap[prod.categoryId] || 'Unknown' %>
                            </span>
                        </td>
                        <td class="pe-4 py-3 text-end">
                            <a href="/dashboard/admin/products/edit/<%= prod.productId %>" class="btn btn-sm btn-light text-primary rounded-pill fw-bold border me-1">Edit</a>
                            
                            <button class="btn btn-sm btn-light text-danger rounded-pill fw-bold border delete-btn" 
                                data-id="<%= prod.productId %>" 
                                data-name="<%= prod.name %>">
                                Delete
                            </button>
                        </td>
                    </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <div class="fs-1 mb-2">üì¶</div>
                            <p class="mb-0">No products found matching your filters.</p>
                            <% if ((typeof search !== 'undefined' && search) || (typeof selectedCategory !== 'undefined' && selectedCategory)) { %>
                                <a href="/dashboard/admin/products" class="btn btn-sm btn-outline-primary rounded-pill mt-2">Clear Search</a>
                            <% } %>
                        </td>
                    </tr>
                <% } %>
            </tbody>
            </table>
        </div>
      </div>
    </div>
    
    <div class="mt-4">
        <a href="/dashboard/admin" class="text-decoration-none text-secondary fw-bold small">&larr; Back to Dashboard</a>
    </div>
  </div>

  <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content rounded-4 border-0 shadow">
        <div class="modal-body p-4 text-center">
          <div class="mb-3 text-danger" style="font-size: 3rem;">üóëÔ∏è</div>
          <h4 class="fw-bold mb-2">Delete Product?</h4>
          <p class="text-muted">
            Are you sure you want to delete <strong id="deleteProductName" class="text-dark"></strong>?<br>
            This action cannot be undone.
          </p>
          
          <form id="deleteForm" method="POST">
            <div class="d-flex justify-content-center gap-2 mt-4">
                <button type="button" class="btn btn-light rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold">Yes, Delete</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("../../partials/footer") %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
      // Handle Delete Modal Data Passing
      const deleteBtns = document.querySelectorAll('.delete-btn');
      const deleteModalEl = document.getElementById('deleteModal');
      const deleteModal = new bootstrap.Modal(deleteModalEl);
      const deleteProductName = document.getElementById('deleteProductName');
      const deleteForm = document.getElementById('deleteForm');

      deleteBtns.forEach(btn => {
          btn.addEventListener('click', function() {
              const id = this.getAttribute('data-id');
              const name = this.getAttribute('data-name');
              
              // Update Modal Content
              deleteProductName.textContent = name;
              deleteForm.action = `/dashboard/admin/products/delete/${id}`;
              
              // Show Modal
              deleteModal.show();
          });
      });
  </script>
</body>
</html>
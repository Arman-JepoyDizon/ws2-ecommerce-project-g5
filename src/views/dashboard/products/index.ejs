<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Products - OnlyFreds</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
  <%- include("../../partials/navbar") %>

  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="fw-bold text-dark mb-0">ðŸ›’ Products</h2>
        <p class="text-muted mb-0">Manage your inventory</p>
      </div>
      <a href="/dashboard/admin/products/new" class="btn btn-primary rounded-pill px-4 shadow-sm">
        <span class="fw-bold">+ New Product</span>
      </a>
    </div>

    <% if (success) { %>
        <div class="alert alert-success rounded-4 shadow-sm border-0 d-flex align-items-center">
            <span class="me-2">âœ…</span> <%= success %>
        </div>
    <% } %>

    <div class="card border-0 shadow rounded-4 overflow-hidden">
      <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
            <thead class="bg-light border-bottom">
                <tr>
                <th class="ps-4 py-3 text-uppercase text-secondary small fw-bold">Product</th>
                <th class="py-3 text-uppercase text-secondary small fw-bold">Price</th>
                <th class="py-3 text-uppercase text-secondary small fw-bold">Category</th>
                <th class="pe-4 py-3 text-end text-uppercase text-secondary small fw-bold">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (products.length > 0) { %>
                    <% products.forEach(prod => { %>
                    <tr>
                        <td class="ps-4 py-3">
                            <div class="d-flex align-items-center">
                                <img src="<%= prod.imgUrl || '/img/OnlyFreds_logo.png' %>" alt="" style="width: 45px; height: 45px; object-fit: contain;" class="rounded me-3 border bg-white">
                                <div>
                                    <div class="fw-bold text-dark"><%= prod.name %></div>
                                    <div class="small text-muted text-truncate" style="max-width: 200px;"><%= prod.description %></div>
                                </div>
                            </div>
                        </td>
                        <td class="py-3 fw-bold text-primary">
                            <% if (prod.hasVariants) { %>
                                <small class="text-muted fw-normal">From</small> â‚±<%= prod.price.toFixed(2) %>
                            <% } else { %>
                                â‚±<%= prod.price.toFixed(2) %>
                            <% } %>
                        </td>
                        <td class="py-3">
                            <span class="badge bg-light text-dark border rounded-pill">
                                <%= categoryMap[prod.categoryId] || 'Unknown' %>
                            </span>
                        </td>
                        <td class="pe-4 py-3 text-end">
                        <a href="/dashboard/admin/products/edit/<%= prod.productId %>" class="btn btn-sm btn-light text-primary rounded-pill fw-bold border me-1">Edit</a>
                        <form action="/dashboard/admin/products/delete/<%= prod.productId %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this product?');">
                            <button class="btn btn-sm btn-light text-danger rounded-pill fw-bold border">Delete</button>
                        </form>
                        </td>
                    </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <div class="fs-1 mb-2">ðŸ“¦</div>
                            <p class="mb-0">No products found.</p>
                        </td>
                    </tr>
                <% } %>
            </tbody>
            </table>
        </div>
      </div>
    </div>
    
    <div class="mt-4">
        <a href="/dashboard/admin" class="text-decoration-none text-secondary fw-bold small">&larr; Back to Dashboard</a>
    </div>
  </div>

  <%- include("../../partials/footer") %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
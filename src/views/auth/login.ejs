<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - OnlyFreds</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" type="image/png" href="/img/OnlyFreds_logo.png"/>
  <style>
    .auth-card {
        border: none;
        border-radius: 1.5rem;
        box-shadow: 0 1rem 3rem rgba(0,0,0,0.1);
        overflow: hidden;
    }
    .auth-header {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);
        color: white;
        padding: 2rem;
        text-align: center;
    }
    .form-control:focus {
        box-shadow: none;
        border-color: #0d6efd;
    }
    .password-wrapper {
        position: relative;
    }
    .password-toggle {
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translateY(-50%);
        cursor: pointer;
        color: #6c757d;
        z-index: 10;
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

  <%- include("../partials/navbar") %>

  <div class="container py-5 flex-grow-1 d-flex align-items-center justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card auth-card">
            <div class="auth-header">
                <h3 class="fw-bold mb-0">Welcome Back</h3>
                <p class="mb-0 opacity-75">Login to your account</p>
            </div>
            <div class="card-body p-4 p-md-5">

                <% if (error) { %>
                    <div class="alert alert-danger rounded-3"><%= error %></div>
                <% } %>
                <% if (message) { %>
                    <div class="alert alert-success rounded-3"><%= message %></div>
                <% } %>
                <% if (typeof logout !== "undefined") { %>
                    <% if (logout === "inactive") { %>
                        <div class="alert alert-warning text-center rounded-3">
                            ‚ö†Ô∏è You‚Äôve been logged out due to inactivity. Please log in again.
                        </div>
                    <% } else if (logout === "manual") { %>
                        <div class="alert alert-success text-center rounded-3">
                            ‚úÖ You have successfully logged out.
                        </div>
                    <% } %>
                <% } %>

                <form method="POST" action="/auth/login">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-uppercase text-muted">Email Address</label>
                        <input type="email" name="email" class="form-control bg-light border-0 py-2 rounded-3" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-uppercase text-muted">Password</label>
                        <div class="password-wrapper">
                            <input type="password" name="password" id="loginPassword" class="form-control bg-light border-0 py-2 rounded-3 pe-5" required>
                            <i class="bi bi-eye-slash password-toggle" onclick="togglePassword('loginPassword', this)"></i>
                        </div>
                    </div>
            
                    <div class="text-end mb-3">
                        <a href="/auth/forgot" class="text-decoration-none small text-muted">Forgot Password?</a>
                    </div>
            
                    <div class="cf-turnstile mb-3" data-sitekey="<%= process.env.TURNSTILE_SITEKEY %>"></div>
                    <button type="submit" class="btn btn-primary w-100 py-2 rounded-pill fw-bold shadow-sm">Login</button>
                </form>

                <div class="text-center mt-4">
                    <p class="small text-muted mb-0">Don't have an account? <a href="/auth/register" class="text-decoration-none fw-bold">Register</a></p>
                </div>
            </div>
        </div>
    </div>
  </div>
  <div class="modal fade" id="bannedModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content rounded-4 border-0 shadow">
        <div class="modal-body p-5 text-center">
          <div class="text-danger mb-3" style="font-size: 4rem;">üö´</div>
          <h2 class="fw-bold text-danger mb-3">Account Banned</h2>
          <p class="text-muted mb-4">
            Your account has been suspended due to a violation of our terms.
          </p>
          
          <% if (typeof banned !== 'undefined' && banned) { %>
            <div class="bg-light p-3 rounded-3 mb-4 text-start">
                <div class="mb-2"><strong>Reason:</strong> <span class="text-muted"><%= banned.reason %></span></div>
                <div><strong>Lift Date:</strong> <span class="text-muted"><%= banned.expiresAt %></span></div>
            </div>
          <% } %>

          <a href="/" class="btn btn-outline-secondary rounded-pill fw-bold px-4">Return Home</a>
        </div>
      </div>
    </div>
  </div>

  <%- include("../partials/footer") %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
  <script>
    function togglePassword(inputId, icon) {
        const input = document.getElementById(inputId);
        if (input.type === "password") {
            input.type = "text";
            icon.classList.remove("bi-eye-slash");
            icon.classList.add("bi-eye");
        } else {
            input.type = "password";
            icon.classList.remove("bi-eye");
            icon.classList.add("bi-eye-slash");
        }
    }
    // Check if banned exists and show modal
    document.addEventListener("DOMContentLoaded", function() {
        if (typeof banned !== 'undefined' && banned) {
            const bannedModal = new bootstrap.Modal(document.getElementById('bannedModal'));
            bannedModal.show();
        }
    })
  </script>
</body>
</html>
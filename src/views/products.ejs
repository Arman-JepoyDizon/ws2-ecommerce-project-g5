<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Products - OnlyFreds</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css"/>
  <link rel="icon" type="image/png" href="/img/OnlyFreds_logo.png"/>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

  <!-- Navbar -->
  <%- include("partials/navbar") %>

  <section class="container text-center py-5">
    <h1 class="display-4 fw-bold">ðŸ›’ Products Page</h1>
    <p class="lead mb-4">Not ready yet... tehee ðŸ˜³ðŸ‘‰ðŸ‘ˆ</p>
    <div class="d-flex justify-content-center">
      <img src="https://media.tenor.com/x8v1oNUOmg4AAAAd/tehe.gif" class="img-fluid rounded shadow" alt="Tehee">
    </div>
  </section>

  <main class="container my-5">
    <div class="row g-4">
      <% if (freddyProducts && freddyProducts.length > 0) { %>
        <% freddyProducts.forEach((product) => { %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-4">
            <div class="card h-100 shadow-sm">
              <img src="<%= product.imgUrl %>" class="card-img-top product-img" alt="<%= product.name %>">
              <div class="card-body text-center d-flex flex-column">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description %></p>
                <p class="fw-bold">$<%= product.price.toFixed(2) %></p>
                <button class="btn btn-primary w-100 mt-auto" disabled>Add to Cart</button>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-muted">No products available yet.</p>
      <% } %>
    </div>
  </main>

  <!-- Footer -->
  <%- include("partials/footer") %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/script/navbar.js"></script>
</body>
</html>

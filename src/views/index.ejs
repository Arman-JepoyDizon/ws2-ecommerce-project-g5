<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>OnlyFreds - Home</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css"/>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

  <!-- Navbar -->
  <%- include("partials/navbar") %>

  <!-- Hero Section -->
  <section class="bg-primary text-white text-center py-5">
    <div class="container">
      <h1 class="display-4 fw-bold">Welcome to OnlyFreds</h1>
      <p class="lead">Your one-stop shop for exclusive Freddy vibes ðŸ§¸</p>
    </div>
  </section>

  <!-- Products Grid -->
  <main class="flex-grow-1">
    <section class="container my-5">
      <h2 class="text-center mb-4">Featured Freds</h2>
      <div class="row g-4">
        <% freddyProducts.forEach((product) => { %>
            <div class="col-6 col-md-4 col-lg-4">
            <div class="card h-100 shadow-sm">
                <img src="<%= product.imgUrl %>" class="card-img-top product-img" alt="<%= product.name %>">
                <div class="card-body text-center d-flex flex-column">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description %></p>
                <p class="fw-bold">$<%= product.price.toFixed(2) %></p>
                <button class="btn btn-primary w-100 mt-auto" disabled>Add to Cart</button>
                </div>
            </div>
            </div>
        <% }) %>
     </div>
    </section>
  </main>

  <!-- Footer -->
  <%- include("partials/footer") %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

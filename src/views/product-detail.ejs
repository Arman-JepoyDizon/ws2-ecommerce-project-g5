<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.name %> - OnlyFreds</title>
  
  <meta name="description" content="<%= product.description %>">
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css"/>
  <link rel="icon" type="image/png" href="/img/OnlyFreds_logo.png"/>

  <style>
    .product-image-container {
        background-color: white;
        border-radius: 1.5rem;
        padding: 2rem;
        box-shadow: 0 0.5rem 1.5rem rgba(0,0,0,0.05);
        display: flex;
        align-items: center;
        justify-content: center;
        height: 500px;
    }
    .product-detail-img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
    }
    .fade-in-up {
        animation: fadeInUp 0.8s ease-out;
    }
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: none; }
    }
  </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

  <%- include("partials/navbar") %>

  <div class="container py-5 fade-in-up">
    <div id="feedbackAlert" class="alert alert-danger d-none" role="alert"></div>

    <nav aria-label="breadcrumb" class="mb-4">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Home</a></li>
        <li class="breadcrumb-item"><a href="/products" class="text-decoration-none">Shop</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%= product.name %></li>
      </ol>
    </nav>

    <div class="row g-5 align-items-center">
      <div class="col-lg-6">
        <div class="product-image-container">
            <img src="<%= product.imgUrl || '/img/OnlyFreds_logo.png' %>" class="product-detail-img" alt="<%= product.name %>">
        </div>
      </div>

      <div class="col-lg-6">
        <div class="ps-lg-4">
            <span class="badge bg-primary rounded-pill mb-2 px-3 py-2 text-uppercase fw-bold"><%= categoryName %></span>
            <h1 class="display-4 fw-bold mb-3"><%= product.name %></h1>
            
            <h2 class="text-primary fw-bold mb-4" id="priceDisplay">
                â‚±<%= product.price.toFixed(2) %>
            </h2>

            <p class="lead text-muted mb-5">
                <%= product.description %>
            </p>

            <form action="/cart/add" method="POST">
                <input type="hidden" name="productId" value="<%= product.productId %>">
                
                <% if (product.hasVariants && product.variants && product.variants.length > 0) { %>
                    <div class="mb-4">
                        <label class="form-label fw-bold text-uppercase small text-muted">Select Option</label>
                        <select class="form-select form-select-lg rounded-4 bg-white border-0 shadow-sm" name="variant" id="variantSelect">
                            <% product.variants.forEach((v, index) => { %>
                                <option value="<%= v.name %>" data-price="<%= v.price %>">
                                    <%= v.name %> - â‚±<%= parseFloat(v.price).toFixed(2) %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                <% } %>

                <div class="row g-2 mb-4">
                    <div class="col-3">
                        <input type="number" name="quantity" class="form-control form-control-lg rounded-4 text-center border-0 shadow-sm" value="1" min="1" required>
                    </div>
                    <div class="col-9">
                        <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill fw-bold shadow-sm">
                            Add to Cart ðŸ›’
                        </button>
                    </div>
                </div>
            </form>

            <div class="mt-5 pt-4 border-top">
                <div class="row text-center text-muted small">
                    <div class="col-4 border-end">
                        <div class="fs-4 mb-1">ðŸš€</div>
                        <div>Fast Shipping</div>
                    </div>
                    <div class="col-4 border-end">
                        <div class="fs-4 mb-1">ðŸ”’</div>
                        <div>Secure Checkout</div>
                    </div>
                    <div class="col-4">
                        <div class="fs-4 mb-1">âœ¨</div>
                        <div>Official Merch</div>
                    </div>
                </div>
            </div>

        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="cartSuccessModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content rounded-4 border-0 shadow">
        <div class="modal-body p-4 text-center">
          <div class="mb-3 text-success" style="font-size: 3rem;">âœ…</div>
          <h4 class="fw-bold mb-2">Added to Cart!</h4>
          <p class="text-muted">This item is now in your basket.</p>
          <div class="d-grid gap-2">
            <a href="/cart" class="btn btn-primary rounded-pill fw-bold">View Cart</a>
            <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">Continue Shopping</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include("partials/footer") %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/script/navbar.js"></script>

  <script>
    // Variant Price Logic
    const variantSelect = document.getElementById('variantSelect');
    const priceDisplay = document.getElementById('priceDisplay');

    if (variantSelect) {
        variantSelect.addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const newPrice = parseFloat(selectedOption.getAttribute('data-price'));
            priceDisplay.textContent = 'â‚±' + newPrice.toFixed(2);
        });

        const initialOption = variantSelect.options[variantSelect.selectedIndex];
        if (initialOption) {
             const initialPrice = parseFloat(initialOption.getAttribute('data-price'));
             priceDisplay.textContent = 'â‚±' + initialPrice.toFixed(2);
        }
    }

    // Modal & Alert Logic
    document.addEventListener('DOMContentLoaded', () => {
        const urlParams = new URLSearchParams(window.location.search);
        
        // 1. Success Case
        if (urlParams.get('added') === 'true') {
            const modalEl = document.getElementById('cartSuccessModal');
            // Check if bootstrap is loaded
            if (typeof bootstrap !== 'undefined' && modalEl) {
                const cartModal = new bootstrap.Modal(modalEl);
                cartModal.show();
            } else {
                console.warn('Bootstrap Modal not loaded');
                alert('Item Added to Cart!'); // Fallback
            }
            
            // Clean URL
            const newUrl = window.location.pathname;
            window.history.replaceState({}, document.title, newUrl);
        }

        // 2. Error Case
        if (urlParams.get('error')) {
            const errorMsg = urlParams.get('error');
            const alertEl = document.getElementById('feedbackAlert');
            alertEl.textContent = errorMsg;
            alertEl.classList.remove('d-none');
            
            // Clean URL
            const newUrl = window.location.pathname;
            window.history.replaceState({}, document.title, newUrl);
        }
    });
  </script>
</body>
</html>
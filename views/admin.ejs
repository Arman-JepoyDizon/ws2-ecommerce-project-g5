<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Global Styles -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar', { activePage: 'admin' }) %>

  <div class="container my-5">
    <div class="glass-card shadow-lg">
      <h1 class="text-center mb-4">Admin Dashboard</h1>
      <p class="text-center text-light">Welcome, <%= currentUser.firstName %> (<%= currentUser.role %>)</p>

      <% if (users.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-dark table-hover table-striped align-middle admin-table rounded overflow-hidden">
            <thead>
              <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Status</th>
                <th>Created</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(user => { %>
                <tr>
                  <td><code><%= user.userId %></code></td>
                  <td><%= user.firstName %> <%= user.lastName %></td>
                  <td><%= user.email %></td>
                  <td>
                    <span class="badge bg-<%= user.role === 'admin' ? 'primary' : 'secondary' %>">
                      <%= user.role %>
                    </span>
                  </td>
                  <td>
                    <span class="badge bg-<%= user.accountStatus === 'active' ? 'success' : 'danger' %>">
                      <%= user.accountStatus %>
                    </span>
                  </td>
                  <td><%= user.createdAt ? user.createdAt.toLocaleDateString() : '' %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-center text-light">No users registered yet.</p>
      <% } %>

      <div class="text-center mt-4">
        <a href="/users/dashboard" class="btn btn-outline-light ms-2">Back to Dashboard</a>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
